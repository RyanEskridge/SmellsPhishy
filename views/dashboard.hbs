{{> header}}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-4 col-lg-2 my-2"  style="width: 33%;">
            <div class="card bg-light">
                <div class="card-body my-4">
                    <h5 class="card-subtitle mb-2">Templates</h6>
                    <div class="row mt-3" style="height: 100%;">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{templateCount}}</h5>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-2 my-2" style="width: 33%;">
            <div class="card bg-light">
                <div class="card-body my-4">
                    <h5 class="card-subtitle mb-2 text-body-secondary" >Targets</h6>
                    <div class="row mt-3" style="height: 100%;">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{targetCount}}</h5>
                            </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-2 my-2" style="width: 33%;">
            <div class="card bg-light">
                <div class="card-body my-4">
                    <h5 class="card-subtitle mb-2 text-body-secondary" >Lists</h6>
                    <div class="row mt-3" style="height: 100%;">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{listCount}}</h5>
                            </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12 col-md-4 col-lg-2 my-2" style="width: 33%;">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-subtitle text-body-secondary text-center">Campaigns</h6>
                    <div class="row mt-3">
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{campaignCount}}</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">Total</h6>
                            </div>
                        </div>
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{campaignActiveCount}}</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">Active</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-2 my-2" style="width: 33%;">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-subtitle text-body-secondary text-center">Tests</h6>
                    <div class="row mt-3">
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{testCount}}</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">Total</h6>
                            </div>
                        </div>
                        <div class="col-6 d-flex justify-content-center align-items-center">
                            <div class="d-flex flex-column align-items-center">
                                <h5 class="card-title h1">{{testActiveCount}}</h5>
                                <h6 class="card-subtitle mb-2 text-body-secondary">Active</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4 col-lg-2 my-2" style="width: 33%;">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-subtitle mb-2 text-body-secondary" >Clicks</h6>
                    <div class="row mt-3" style="height: 100%;">
                        <div class="d-flex flex-column align-items-center">
                            <h5 class="card-title h1">{{clickCount}}</h5>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
